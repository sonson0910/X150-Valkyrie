{
  "expo": {
    "name": "x150-valkyrie",
    "slug": "x150-valkyrie",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "assets/splash.png",
      "resizeMode": "cover",
      "backgroundColor": "#0a0e27"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.valkyrie.cardanowallet",
      "infoPlist": {
        "NSFaceIDUsageDescription": "This app uses Face ID for secure wallet access and transaction authorization.",
        "NSCameraUsageDescription": "This app uses the camera to scan QR codes for transactions.",
        "NSBluetoothAlwaysUsageDescription": "This app uses Bluetooth to transfer transactions when offline.",
        "NFCReaderUsageDescription": "This app uses NFC to read secure payment requests.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "assets/adaptive-icon.png",
        "backgroundColor": "#0a0e27"
      },
      "package": "com.valkyrie.cardanowallet",
      "enableProguardInReleaseBuilds": true,
      "allowBackup": false,
      "permissions": [
        "CAMERA",
        "NFC",
        "NFC_TRANSACTION_EVENT",
        "BLUETOOTH",
        "BLUETOOTH_ADMIN",
        "BLUETOOTH_SCAN",
        "BLUETOOTH_CONNECT",
        "BLUETOOTH_ADVERTISE",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "USE_BIOMETRIC",
        "USE_FINGERPRINT"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "./plugins/with-ssl-pinning-certs",
        {
          "certs": [
            "blockfrost"
          ]
        }
      ],
      "./plugins/with-rnbtclassic-android-fix",
      "./plugins/with-nfc-manager-android-fix",
      "./plugins/with-ios-nfc-entitlements"
    ],
    "extra": {
      "sslPinning": {
        "certs": [
          "blockfrost"
        ]
      },
      "blockfrostApiKey": "preprod06dzhzKlynuTInzvxHDH5cXbdHo524DE",
      "eas": {
        "projectId": "499b0b75-f12a-43ef-93e7-58cc8ec7ca3d"
      }
    },
    "owner": "sonson0910"
  }
}
